<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip">
        <ImageView 
            android:id="@+id/iv_login_back_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_left"
            android:layout_margin="10dip"/>
        <ImageView 
            android:id="@+id/iv_login_emo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/emo_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey,欢迎回来:)"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_login_emo"
            android:layout_marginTop="24dip"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <EditText 
            android:id="@+id/et_login_phone_number"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#7A6F69"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="输入手机号"
            android:layout_marginTop="20dip"
            android:inputType="number"
            android:singleLine="true"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:background="#ffffff"/>
        <EditText 
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#7A6F69"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            />
        
        <Button 
            android:id="@+id/btn_login_login"
            android:layout_width="300dip"
            android:layout_height="50dip"
            android:text="登录"
            android:textColor="#ffffff"
            android:layout_marginTop="20dip"
            android:layout_gravity="center_horizontal"/>
        
    </LinearLayout>

</LinearLayout>











